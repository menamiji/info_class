# Environment Configuration for Info Class Backend
# Copy this file to .env and fill in the actual values

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security Settings
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-jwt-signing-key-here
ACCESS_TOKEN_EXPIRE_HOURS=24

# Firebase Configuration
FIREBASE_PROJECT_ID=info-class-7398a
# Option 1: Path to service account key file
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account-key.json
# Option 2: Service account key as JSON string (for Docker/production)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type": "service_account", "project_id": "info-class-7398a", ...}

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Admin Email Configuration
# Add admin emails separated by commas
# ADMIN_EMAILS=admin@pocheonil.hs.kr,teacher@pocheonil.hs.kr